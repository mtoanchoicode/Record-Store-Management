extends ../../layouts/default.pug

block main 
    if(product.title)
        h1(class="mb-4") #{product.title}

    if(product.description)
        div(class="mb-4") #{product.description}

    if(product.price)
        div(class="mb-4") Price: <b>#{product.price}$</b>
    
    if(product.discountPercentage)
        div(class="mb-4") Discount: <b>#{product.discountPercentage}%</b>

    if(product.stock)
        div(class="mb-4") Stock: <b>#{product.stock}</b>

    if(product.thumbnail)
        div(class="mb-4")
            img(src=product.thumbnail style="width:100px")

    if(product.status)
        div(class="mb-4")
            span Status: 
            if (product.status === "available")
                span(class="badge bg-success") Available  
            else 
                span(class="badge bg-danger") Unavailable   

    if(product.position)
        div(class="mb-4") Position: <b>#{product.position}</b>
    
    a(href=`${prefixAdmin}/products/edit/${product.id}` class="btn btn-warning") Edit
    

    script(src="/admin/js/product.js")