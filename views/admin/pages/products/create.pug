extends ../../layouts/default.pug
include ../../mixins/alert.pug
include ../../mixins/select-tree.pug

block main
    if(role.permission.includes("product_create"))
        +alert-error(5000)

        h1(class="mb-4") Add new product 

        form(
            action=`${prefixAdmin}/products/create`
            id="form-create-product"
            method="POST"
            enctype = "multipart/form-data"
        )
            div(class="form-group")
                label(for="title") Product Name 
                input(
                    type = "text"
                    class = "form-control"
                    id = "title"
                    name="title"
                    required
                )

            div(class="form-group")
                label(for="product_category_id") Category 
                select(
                    name = "product_category_id"
                    id = "product_category_id"
                    class= "form-select"
                )
                    option(disabled selected) --Choose Category--
                    if (category)
                        +select-tree(category)

            div(class="form-group")
                label(for="desc") Description
                textarea(
                    class = "form-control tiny-mce"
                    id = "desc"
                    name="description"
                    rows="5"
                )
            div(class="form-group")
                label(for="price") Price
                input(
                    type = "number"
                    class = "form-control"
                    id = "price"
                    name="price"
                    value="0"
                    min="0"
                )
            div(class="form-group")
                label(for="disscount") Disscount (%)
                input(
                    type = "number"
                    class = "form-control"
                    id = "disscount"
                    name="discountPercentage"
                    value="0"
                    min="0"
                )
            div(class="form-group")
                label(for="stock") Stock
                input(
                    type = "number"
                    class = "form-control"
                    id = "stock"
                    name="stock"
                    value="0"
                    min="0"
                )
            div(class="form-group" upload-image)
                label(for="thumbnail") Thumbnail (url)
                input(
                    type = "file"
                    class = "form-control"
                    id = "thumbnail"
                    name="thumbnail"
                    accept="image/"
                    upload-image-input
                )
                img(src="" upload-image-preview class="img-preview")
            div(class="form-group")
                label(for="position") Position
                input(
                    type = "number"
                    class = "form-control"
                    id = "position"
                    name="position"
                    placeholder = "Auto Increment"
                    min="1"
                )
            div(class="form-group form-check form-check-inline")
                input(
                    type = "radio"
                    class = "form-check-input"
                    id = "statusAvailable"
                    name="status"
                    value="available"
                    checked
                )
                label(for="statusAvailable" class="form-check-label") Available
            div(class="form-group form-check form-check-inline")
                input(
                    type = "radio"
                    class = "form-check-input"
                    id = "statusUnavailable"
                    name="status"
                    value="unavailable"
                )
                label(for="statusAvailable" class="form-check-label") Unavailable
            div(class="form-group")
                button(
                    type="submit"
                    class="btn btn-primary"
                ) Create New


        script(src="/admin/js/product.js")